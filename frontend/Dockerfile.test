FROM node:18-alpine

WORKDIR /app

COPY frontend/package*.json ./
RUN npm install --no-audit --no-fund

COPY frontend/ ./

# Required by webpack/react-scripts on Node 17+ (OpenSSL legacy hash support).
# Also prevents occasional test-environment crashes on Node 18.
ENV NODE_OPTIONS=--openssl-legacy-provider

# --watchAll=false: run once and exit (no interactive watch prompt in container).
CMD ["npm", "test", "--", "--watchAll=false"]
